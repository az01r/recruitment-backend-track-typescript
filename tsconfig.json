{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2023",
    "module": "node20",
    "moduleResolution": "node16",
    "lib": [
      "ES2023"
    ],
    /* Modules */
    "rootDir": "./src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Emit */
    "sourceMap": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}